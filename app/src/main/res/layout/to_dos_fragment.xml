<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewmodel" type="com.example.letsdo.ToDosViewModel"/>
        <variable name="action_button_click" type="android.view.View.OnClickListener"/>
    </data>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" style="@style/padding">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.toDosQuantityStr}"
            />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_button"
                android:layout_marginEnd="@dimen/margin_end"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:src="@drawable/ic_add_24dp"
                android:layout_gravity="bottom|end"/>
    </FrameLayout>


</layout>
